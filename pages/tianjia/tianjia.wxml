<view tinajia-box>
  <van-cell-group>
  <van-field
    value="{{ username }}"
    required
    clearable
    label="收货人"
    icon="question-o"
    placeholder="请输入收获人的名字"
    bind:click-icon="onClickIcon"
    bind:input = "name"
  />
</van-cell-group>
<van-cell-group>
  <van-field
    value="{{ phone }}"
    label="手机号"
    placeholder="请输入手机号"
    border="{{ false }}"
    bind:change="shouji"
  />
</van-cell-group>
<van-area area-list="{{ areaList }}" item-height="30" bind:confirm="dizhi" />
<van-cell-group>
  <van-field
    value="{{ message }}"
    label="详细地址"
    type="textarea"
    placeholder="请输入收货人的详细地址"
    autosize
    border="{{ false }}"
  />
</van-cell-group>
<view class="baocun">
  默认地址
     <van-switch checked="{{ checked }}" bind:change="onChange" />
</view>
<view class="baocun-btn"><button>保存地址</button></view>
</view>