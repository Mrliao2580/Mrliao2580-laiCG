<view tinajia-box>
  <van-cell-group>
  <van-field
    value="{{ username }}"
    required
    clearable
    label="收货人"
    icon="question-o"
    placeholder="请输入收获人的名字"
    bind:click-icon="onClickIcon"
    bind:input = "name"
  />
</van-cell-group>
<van-cell-group>
  <van-field
    value="{{  }}"
    label="手机号"
    placeholder="请输入手机号"
    border="{{ false }}"
    bind:input = "shouji"
    bind:blur ="panduan"
  />
</van-cell-group>
<van-area area-list="{{ areaList }}" item-height="30" bind:confirm="dizhi" />
<van-cell-group>
  <van-field
    value="{{ message }}"
    label="邮政编码"
    type="textarea"
    placeholder="请输入您的邮政编码"
    autosize
    border="{{ false }}"
    bind:input="youzheng"
    bind:blur ="bianma"

  />
</van-cell-group>
<van-cell-group>
  <van-field
    value="{{ message }}"
    label="详细地址"
    type="textarea"
    placeholder="输入详细地址"
    border="{{ false }}"
   bind:input="xiangxidizhi"
  />
</van-cell-group>
<view class="baocun">
  默认地址
     <van-switch checked="{{ checked }}" bind:change="onChange" />
</view>
<view class="baocun-btn" bindtap="baocundizhi"><button>保存地址</button></view>
</view>