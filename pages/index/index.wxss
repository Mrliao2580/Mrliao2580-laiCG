@import "/assets/css/icon.wxss";
page{
}
.header{
  height: 100%;
  position: relative;
  line-height: 90rpx;
  text-align: center;
}

.header .search1{
  position: absolute;
  z-index: 100;
  left: 220rpx;
  color: #999;
}

.header .search{
  display: inline-block;
  background: #f5f5f5;
  height: 60rpx;
  width: 100%;
  border-radius: 20px;
  line-height: 30rpx;
  font-size: 28rpx;
  text-align: center;
  color: #999;
  text-decoration:auto
}

.header .rightBtn{
  position: absolute;
  top: 12rpx;
  right: 40rpx;
  width: 60rpx;
  height: 40rpx;
  
  
}

.goodsType{
  height: 100rpx;
}

.goodsType .box{
  display: flex;
  white-space: nowrap;
  border-bottom: 2rpx solid #eee;
}

.goodsType .box view{
  margin:0 20rpx;
}


/* .goodsType .box .goodsBox{
  box-sizing: border-box;
} */

.goodsType .box .goodsBox .name{
  font-size: 28rpx;
  color: #666;
}

.hidden{
  color: #fe4070;
  height: 80rpx;
  /* line-height: 60rpx; */
  border-bottom: 6rpx solid #fe4070;
}

.showSwip{
  height: 268rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
  overflow: hidden;
}
.timeChange{
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
  color: #fe4070;
}
.showSwip .swiperList image{
  width: 100%;
}

.imgBox{
  margin-left: 15rpx;
  margin-right: 15rpx;
}
.imgBox image{
  width: 100%;
}

/* 商品介紹 */

.goodsDetail{
  margin-left: 15rpx;
  margin-right: 15rpx;
}

.goodsDetail .makeUp{
  position: relative;
}

.goodsDetail .makeUp image{ 
  width: 100%;
  height: 248rpx;
}

.goodsDetail .makeUp .goods{
  position: absolute;
  display: flex;
  flex-direction: column;
  justify-content:space-around;
  height: 100%;
  top: 0;
  right: 120rpx;
}

.goodsDetail .makeUp .goods .title{
  color: #333;
  font-size: 26rpx;
}

.goodsDetail .makeUp .goods .goodsBottom .money{
  color: #fe4070;
}

.goodsDetail .makeUp .goods .goodsBottom .money .realTime {
  font-size: 48rpx;
}

.goodsDetail .makeUp .goods .goodsBottom .money .realTime .symbol{
  font-size: 24rpx;
}
.goodsDetail .makeUp .goods .goodsBottom .money .beforeTime{
  color: #ccc;
  font-size: 24rpx;
  margin-left: 20rpx;
  text-decoration: line-through;
}

.goodsDetail .makeUp .goods .goodsBottom .asses{
    color: #999;
    font-size: 11px;
}

/* 极速免税店 */

.navBox {
  display: flex;
  height: 230rpx;
  justify-content: space-around;
  align-items: center;
}

.navBox .nav{
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  height: 180rpx;
}

.navBox .nav image{
  width: 106rpx;
  height: 106rpx;
  
}

.Separate{
  border-bottom:15rpx solid #eeeeee;
}

.goodsChange{
  display: flex;
  align-items: center;
  justify-content: center;
  height: 78rpx;

}

.goodsChange .goodsItm{
  width: 34rpx;
  height: 34rpx;
}

.goodsChange text{
  color: #333;
  font-size: 14px;
}

/* 母婴板块 */
.list-items{
  display: flex;
  flex-wrap: wrap;
}

.list-items image{
  width: 187rpx;
  height: 187rpx;
}
   