@import "../../assets/css/icon.wxss";
.title{  
  height: 90rpx;
  text-align:center;
  line-height: 90rpx;
  border-bottom: 2rpx solid #eee;
  border-top: 2rpx solid #eee;
  color: #333;
  overflow: hidden;
}


.sort{
  display: flex;
  justify-content: space-between;
}
.sort .brand,
.sort .assort,
.sort .sffort,
.sort .price{
  flex: 1;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  border-bottom: 2rpx solid #eee;
  color: #666;
}

.sort .price .effect{
  position: relative;
  display: inline-block
}

.sort .price .effect .icon-shangjiantou{
  position: absolute;
  top:-62rpx
}

.sort .price .effect .icon-iconfontarrows{
  position: absolute;
  top: -40rpx;
}

.hiddenContent{
  margin-top: 100rpx;
}

.hiddenContent .imgList{
  display: flex;
  height: 380rpx;
  width: 100%;
  line-height:100rpx ;
  flex-direction: column;
  align-items: center;
}

.hiddenContent .imgList image{
  width: 162rpx;
  height: 162rpx;
}

.hiddenContent .imgList .no-result-info{
  font-size: 14px;
  color: #999;
  margin-bottom: 3.093rem;
  margin-top: 30rpx;
}

.hiddenContent .btn{
  text-align: center;
  margin: 0 auto;
  height: 70rpx;
  width: 400rpx;
  line-height: 70rpx;
  color: white;
  background: #fe4070;
  border-radius: 42rpx;
}

.hiddenContent .jmImg{
  box-sizing: border-box;
  width: 100%;
  height: 140rpx;
  margin-top: 30rpx;
  padding: 0 20rpx;
}

.hiddenContent .jmImg image{
  width: 100%;
  height: 100%;
}