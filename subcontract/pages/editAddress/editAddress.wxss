@import "../../../assets/css/icon.wxss";
.addressBox{
  display: flex;
  width: 100%;
  height: 128rpx;
  align-items: center;
  box-sizing: border-box;
  padding: 0 20rpx;
  border-bottom: 2rpx solid #eee;
  color: #333;
  font-size: 28rpx;
  justify-content: space-between;
}

.addressBox .infoBox{
  margin-left: 40rpx;
  flex: 1;
}

.addressBox .phone{
  margin-top: -50rpx;
  margin-right: 20rpx;
}

.addAddress{
  position: fixed;
  display: flex;
  justify-content: center;
  align-items: center;
  bottom: 0;
  left: 0;
  height: 100rpx;
  width: 100%;
  background: #fff;
  border-top: 1px solid #eee;
}

.addAddress .btn{
  background: #fe4070;
  border: 0;
  width: 400rpx;
  height: 72rpx;
  text-align: center;
  line-height: 72rpx;
  border-radius: 1.125rem;
  color: white;
}