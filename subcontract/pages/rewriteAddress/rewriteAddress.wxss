@import "../../../assets/css/icon.wxss";
page{
  background: #f5f5f5;
}
van-cell-group{
  background: white;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  box-sizing: border-box;
  padding: 0 20rpx;
}

van-cell-group .title{
  color: #999;
  font-size: 28rpx;
}

van-cell-group .slimAdd{
  margin-left: 30rpx;
  font-size: 28rpx;
  width: 227rpx;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}

/* 省市区 */
.Province{
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 1005;
  height: 90rpx;
  background: white;
  border-bottom: 1rpx solid #eee;
  font-size: 28rpx;
  color: #999;

}

.Province .content{
  flex: 1;
  padding-left: 40rpx;
  color: black;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
  
}

.Province .location{
  color: #fe4070;
}

/* 遮盖层 */
.cover{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 2000rpx;
  z-index: 9;
  background: rgba(0,0,0,.4);
}

.cover .display{
  position: fixed;
  background: white;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 35%;
}

/* 保存地址 */
.saveBox{
  display: flex;
  justify-content: center;
  margin:80rpx auto;
}

.saveBox .saveLocation{
  width: 400rpx;
  height: 70rpx;
  background: #fe4070;
  color: white;
  border: 1px solid rgba(0,0,0,.1);
  border-radius: 1.09375rem;
  text-align: center;
  line-height: 70rpx;
}

.saveBox .delete{
 background:white;
 color: #999;
}